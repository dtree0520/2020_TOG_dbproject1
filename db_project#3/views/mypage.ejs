        <th>과목명</th>
        <th>개설학과</td>
        <th>학점</th>
        <th>성적</th>
    </tr>
    </thead>
    <tbody>

    <%
    for(var i=0;i<courses.length;i++){
        var twoItem=courses[i];

    if(twoItem.s_semester==s && twoItem.s_year==y){

    %>

    <tr>
        <td><%=twoItem.cname%></td>
        <td><%=twoItem.department%></td>
        <td><%=twoItem.credit_hours%></td>
        <%
        if(twoItem.grade!=null){
        %>
        <td><%=twoItem.grade%></td>
        <%
        }
        else{
        %>
            <td style="color: silver">미등록 상태</td>
        <%
        }
        %>
    </tr>

    <%
    }
    }
    %>
    </tbody>
</table>
<br></br><br></br>
<%
}
}
%>


