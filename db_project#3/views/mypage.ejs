<span style="font-weight: bold; font-size: 30px">성적 조회</span>
<br></br>
<span style="font-weight: bold;">***전체 성적 조회***</span>
<br></br>

<%
var comp=[["1","1"],["1","2"],["2","1"],["2","2"],["3","1"],["3","2"],["4","1"],["4","2"]];
var temp=[0,0,0,0,0,0,0,0];
var count=0;
for (var k=0;k<courses.length;k++){
    var ro=courses[k];

    var sy=[ro.s_year,ro.s_semester];

    for(var m=0;m<8;m++){
        if(sy[0] == comp[m][0] && sy[1] == comp[m][1] && temp[m]==0) {
            temp[m] = temp[m] + 1;
        }
    }
}
for(var i =0;i<8;i++){
    count=count+temp[i];
}

%>
<table class= "table table-hover">

    <thead class="thead-light">
    <tr>
        <th>학기</th>
        <th>취득학점</th>
        <th>전공평점</th>
        <th>평균평점</th>
    </tr>
    </thead>
    <tbody>

    <%

    var total_hours;
    var total_major;
    var total_grade;
    var counts;
    var countss;
    var int_hours;
    var int_grade;
    var average_grade;
    var average_major;
    var check;
    var com_hour=["-","-","-","-","-","-","-","-"];
    var com_major=["-","-","-","-","-","-","-","-"];
    var com_grade=["-","-","-","-","-","-","-","-"];

    for(var i=0;i<8;i++){
        counts = 0;
        countss = 0;
        total_hours = 0;
        total_major = 0;
        total_grade = 0;

        if(temp[i]==1) {

            check=0;
            var y1 = comp[i][0];
            var s1 = comp[i][1];

            for (var t = 0; t < courses.length; t++) {
                var xxItem = courses[t];
                if (xxItem.s_semester == s1 && xxItem.s_year == y1) {
                    counts++;
                }
            }


            for (var j = 0; j < courses.length; j++) {
                var xItem = courses[j];
                if (xItem.s_semester == s1 && xItem.s_year == y1) {
                    int_hours = Number(xItem.credit_hours);

                    if (xItem.grade == "A+") {
                        int_grade = 4.5;
                    }
                    else if (xItem.grade == "A0") {
                        int_grade = 4.0;
                    }
                    else if (xItem.grade == "B+") {
                        int_grade = 3.5;
                    }
                    else if (xItem.grade == "B0") {
                        int_grade = 3.0;
                    }
                    else if (xItem.grade == "C+") {
                        int_grade = 2.5;
                    }
                    else if (xItem.grade == "C0") {
                        int_grade = 2.0;
                    }
                    else if (xItem.grade == "D+") {
                        int_grade = 1.5;
                    }
                    else if (xItem.grade == "D0") {
                        int_grade = 1.0;
                    }
                    else if (xItem.grade == "F") {
                        int_grade = 0.0;
                    }
                    else {
                        int_grade = "-";
                        check=1;
                    }

                    if(check==0)
                        total_hours = total_hours + int_hours;
                    else
                        total_hours="-";

                    if(int_grade!="-") {
                        total_grade = total_grade + int_grade;
                    }
                    else{
                        total_grade="-";
                    }

                    if (xItem.department == oneItem.major) {
                        countss = countss + 1;
                        if(int_grade!="-") {
                            total_major = total_major + int_grade;
                        }
                        else{
                            total_major="-";
                        }
                    }

                }


            }
            if(counts==0){
                average_grade="-";
            }
            else{

                if(total_grade!="-")
                    average_grade = (total_grade / counts);
                else
                    average_grade="-";
            }
            if(countss==0){
                average_major="-";
            }
            else{
                if(total_major!="-")
                    average_major = (total_major / countss);
                else
                    average_major="-";
            }

        %>
    <tr>
        <td><%=y1%>학년 <%=s1%>학기</td>
        <td><%=total_hours%></td>
        <%
        if(average_major!="-"){
        %>
            <td><%=average_major.toFixed(2)%></td>
        <%
        }
        else{
        %>
            <td><%=average_major%></td>
        <%
        }
        if(average_grade!="-"){
        %>
        <td><%=average_grade.toFixed(2)%></td>
        <%
        }
        else{
        %>
        <td><%=average_grade%></td>
        <%
        }
        %>
    </tr>
    <%
        com_hour[i]=total_hours;
        com_grade[i]=average_grade;
        com_major[i]=average_major;
    }

    }
    var check_grade=0;
    var check_major=0;
    for(var h=0;h<8;h++){
        if(com_grade[h]!="-")
            check_grade++;
        if(com_major[h]!="-")
            check_major++;
    }
    var total_gg=0;
    var total_hh=0;
    var total_mm=0;
    for(var h=0;h<8;h++){
        if(com_grade[h]!="-")
            total_gg=total_gg+com_grade[h];
        if(com_hour[h]!="-")
            total_hh=total_hh+com_hour[h];
        if(com_major[h]!="-")
            total_mm=total_mm+com_major[h];
    }
    if(check_grade!=0)
        total_gg=total_gg/check_grade;
    else
        total_gg="-";
    if(check_major!=0)
        total_mm=total_mm/check_major;
    else
        total_mm="-";
 %>


    </tbody>
    <thead class="thead-light">
    <tr>
        <th>전체학기</th>
        <th><%=total_hh%></th>

        <%
        if(total_mm!="-"){
        %>
        <th><%=total_mm.toFixed(2)%></th>
        <%
        }
        else{
        %>
        <th><%=total_mm%></th>
        <%
        }
        if(total_gg!="-"){
        %>
        <th><%=total_gg.toFixed(2)%></th>
        <%
        }

        else{
        %>

        <th><%=total_gg%></th>
        <%
        }
        %>
    </tr>
    </thead>

</table>
<br></br><br></br>
<span style="font-weight: bold;">***성적 추이 그래프***</span>
<br></br>

<ul class="ratio">
    <%
    for(var i=0;i<8;i++){
    if(com_grade[i]!="-"){
        var ccc=comp[i][0];
        var sss=comp[i][1];
        var result=com_grade[i]/4.5*100;
    %>

    <li><em1 ><%=ccc%>학년 <%=sss%>학기</em1><div style="height: <%=result%>%; background-color: cadetblue"><em ><%=com_grade[i].toFixed(2)%></em></div></li>

    <%
    }
